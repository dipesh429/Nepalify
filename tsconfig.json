{
    "compilerOptions": {
        "target": "es5",
        "outDir": "build",
        "esModuleInterop": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "jsx": "react",
        "declaration": true,
        "lib": [
            "es2017",
            "DOM"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}